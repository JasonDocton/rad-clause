{
	"name": "@rad-claude/mcp-server",
	"version": "1.0.0",
	"description": "Model Context Protocol server for intelligent skill activation with semantic detection and progressive disclosure. Zero token overhead.",
	"type": "module",
	"main": "src/index.ts",
	"author": "rad-claude contributors",
	"license": "MIT",
	"keywords": [
		"mcp",
		"model-context-protocol",
		"claude",
		"ai",
		"skills",
		"semantic-detection",
		"progressive-disclosure",
		"convex",
		"typescript",
		"react",
		"bun"
	],
	"scripts": {
		"dev": "bun --hot src/index.ts",
		"build": "bun build src/index.ts --outdir dist --target node",
		"build:binary": "bun build src/index.ts --compile --outfile dist/rad-claude",
		"test": "bun test",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.22.0",
		"js-yaml": "^4.1.1",
		"minimatch": "^10.1.1",
		"zod": "3"
	},
	"devDependencies": {
		"@types/js-yaml": "^4.0.9",
		"bun-types": "^1.3.2",
		"typescript": "^5.9.3"
	}
}
